<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <filter>
    <filter-name>Filter</filter-name>
    <filter-class>filters.CharsetFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CORSFilter</filter-name>
    <filter-class>filters.CORSFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CORSFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>currencies</servlet-name>
    <servlet-class>servlets.CurrenciesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>currencies</servlet-name>
    <url-pattern>/currencies</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>currency</servlet-name>
    <servlet-class>servlets.CurrencyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>currency</servlet-name>
    <url-pattern>/currency/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>exchangeRates</servlet-name>
    <servlet-class>servlets.ExchangeRatesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>exchangeRates</servlet-name>
    <url-pattern>/exchangeRates/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>exchange</servlet-name>
    <servlet-class>servlets.ExchangeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>exchange</servlet-name>
    <url-pattern>/exchange/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>exchangeRate</servlet-name>
    <servlet-class>servlets.ExchangeRateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>exchangeRate</servlet-name>
    <url-pattern>/exchangeRate/*</url-pattern>
  </servlet-mapping>
</web-app>